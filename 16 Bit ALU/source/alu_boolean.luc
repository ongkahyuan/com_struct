module alu_boolean (
    input a[16],
    input b[16],
    input alufn[4],
    output out[16]
  ) {

  always {
    case(alufn[3:0]){
    
      // Boolean Operations:
      1000: out = a & b; // AND
      1110: out = a | b; // OR
      0110: out = a ^ b; // XOR
      1010: out = a;     // "A"
      0001: out = ~(a & b); // Additional: NAND
      1111: out = ~(a | b); // Additional: NOR
      0111: out = ~(a ^ b); // Additional: XNOR
      default: out = 16b0;
      
      }
  }
}